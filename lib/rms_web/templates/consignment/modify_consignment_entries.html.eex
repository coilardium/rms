                        <label for="example-input-small" class="form-label">Consignor<span style="color: red;"></label>
                         <select required name="consigner_id"  consigner_data ="<%= @batch_items && @batch_items.consigner_id %>" id="consigner"  class="form-control  m-select2 m_select2_1">
                            <option></option>
                            <%= for clients <- @clients do %>
                            <option value="<%= clients.id %>"><%= clients.client_name %></option>
                            <% end %>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4 form-group">
                    <div class="form-group">
                        <label for="example-input-small" class="form-label">Reporting Station<span style="color: red;"></label>
                            <select required name="reporting_station_id"  reporting_station_id_data ="<%= @batch_items && @batch_items.reporting_station_id %>" id="reporting_station_id" class="form-control m-select2 m_select2_1 m-input ">
