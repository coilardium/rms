                    <label for="example-input-small" class="form-label">Customer<span style="color: red;">*</span></label>
                    <select required name="customer_id" client_id_data ="<%= @batch_items && @batch_items.customer_id %>" id="client_id" class="form-control m-select2 select2_form tariff-lookup-edit">
                        <option></option>
                        <%= for client <- @clients do %>
                        <option value="<%= client.id %>"><%=  client.client_name %></option>
                        <% end %>
                    </select>
                </div>
                <div class="col-sm-4 form-group" style="margin: 1px 0;">
