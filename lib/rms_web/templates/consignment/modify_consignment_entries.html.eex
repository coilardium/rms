<div class="modal fade" id="edit_order" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"  style="margin-top:5px; margin-left:20px;">Consignment Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed col-lg-12  " action="" method="">
                    <input type="hidden" name="_csrf_token" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                    <div class="m-portlet__body">
                        <div class="form-group m-form__group row">
                            <div class="col-lg-6">
                                <label class="">Wagon Owner:</label>
                                <div class="m-input-icon m-input-icon--right">
                                    <input type="text" class="form-control m-input field-clr" placeholder=""  name="wagon_code" id="cons_wagon_code"  required="required">
                                    <input type="hidden" class="field-clr" name="id" id="consign_id">
                                    <input type="hidden" class="field-clr" name="wagon_id" id="wagon_id">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label class="">Wagon Owner:</label>
                                <div class="m-input-icon m-input-icon--right">
                                    <input type="text" class="form-control m-input field-clr" placeholder=""  name="wagon_owner" id="wagon_owner"  required="required">
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <div class="col-lg-6">
                                <label class="">Wagon Type:</label>
                                <div class="m-input-icon m-input-icon--right">
                                   <input type="text" class="form-control m-input field-clr" placeholder=""  name="wagon_type" id="wagon_type"  required="required">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label class="">Capacity tonnes</label>
                                <div class="m-input-icon m-input-icon--right">
                                    <input required type="text" id="wagon_capacity" name="wagon_capacity" class="form-control form-control field-clr">
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <div class="col-lg-6">
                                <label class="">Tariff Tonnage</label>
                                <div class="m-input-icon m-input-icon--right">
                                    <input required type="type" id="tariff_tonnage" name="tariff_tonnage" class="form-control form-control field-clr">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label class="">Actual tonnes</label>
                                <div class="m-input-icon m-input-icon--right">
                                    <input required type="type" id="actual_tonnes" name="actual_tonnes" class="form-control form-control field-clr">
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <div class="col-lg-6">
                                <label class="">Container Number</label>
                                <div class="m-input-icon m-input-icon--right">
                                    <input required type="type" id="container_no" name="container_no" class="form-control form-control field-clr">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label class="">Comment</label>
                                <div class="m-input-icon m-input-icon--right">
                                   <textarea class="form-control m-input field-clr" id="comment" name="comment" rows="1"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="modify-consign-entry" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
