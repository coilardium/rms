                                <%= for stations <- @stations do %>
                                <option value="<%= stations.id %>"><%= stations.description %></option>
                                <% end %>
                            </select>
                    </div>
                </div>
                <div class="col-sm-4 form-group">
                    <div class="form-group">
                        <label for="example-input-small" class="form-label">Commodity<span style="color: red;"></label>
                        <select required name="commodity_id"  commodity_id_data ="<%= @batch_items && @batch_items.commodity_id %>" id="commodity_type" class="form-control tariff-lookup-edit m-select2 m_select2_1 m-put ">
                            <option></option>
                            <%= for commodity <- @commodity do %>
                            <option value="<%= commodity.id %>"><%= commodity.code %></option>
                            <% end %>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4 form-group" >
                    <div class="form-group">
                        <label for="example-input-small" class="form-label">Consignee<span style="color: red;"></label>
                       <select required name="consignee_id" consignee_data ="<%= @batch_items && @batch_items.consignee_id %>" id="consignee" class="form-control  m-select2 m_select2_1">
                            <option></option>
                            <%= for clients <- @clients do %>
                            <option value="<%= clients.id %>"><%= clients.client_name %></option>
                            <% end %>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4 form-group">
                    <div class="form-group">
                        <label for="example-input-small" class="form-label">Capture Date<span style="color: red;"></label>
                        <input required type="date" id="capture_date" name="capture_date"  value="<%= @batch_items && @batch_items.capture_date %>" class="form-control m-put ">
                    </div>
                </div>
                <div class="col-sm-4 form-group">
                    <div class="form-group">
                            <label for="example-input-small" class="form-label">Origin Station<span style="color: red;"></label>
                            <select required name="origin_station_id"  data_origin_station_id="<%= @batch_items && @batch_items.origin_station_id %>" id="origin_station_id" class="form-control m-select2 m_select2_1 m-put ">
                                <option></option>
                                <%= for stations <- @stations do %>
                                <option value="<%= stations.id %>"><%= stations.description %></option>
                                <% end %>
                            </select>
                    </div>
                </div>
                <div class="col-sm-4 form-group">
                    <div class="form-group">
                        <label for="example-input-small" class="form-label">Payer<span style="color: red;"></label>
                         <select required name="payer_id"  payer_data ="<%= @batch_items && @batch_items.consignee_id %>" id="payer" class="form-control m-select2 m_select2_1">
                            <option></option>
                            <%= for clients <- @clients do %>
                            <option value="<%= clients.id %>"><%= clients.client_name %></option>
                            <% end %>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4 form-group">
                    <div class=input-group'>
                        <label for="example-input-small" class="form-label">Document Date<span style="color: red;"></label>
                        <input required type="date" id="document_date" value="<%= @batch_items && @batch_items.document_date %>" name="document_date" class="form-control m-put ">
                    </div>
                </div>
                <div class="col-sm-4 form-group">
                    <div class="form-group">
                        <label for="example-input-small" class="form-label">Tariff Origin<span style="color: red;"></label>
                         <select required name="tariff_origin_id" data_origin_tariff="<%= @batch_items && @batch_items.tariff_origin_id %>"  id="origin_tariff" class="form-control m-select2 m_select2_1 station_select tariff-lookup-edit ">
                            <option></option>
                            <%= for stations <- @stations do %>
                            <option value="<%= stations.id %>"><%= stations.description %></option>
                            <% end %>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4 form-group">
                    <div class="form-group">
                        <label for="example-input-small" class="form-label">Final Destination<span style="color: red;"></label>
                        <select required name="final_destination_id" final_destination_data ="<%= @batch_items && @batch_items.final_destination_id %>" id="final_destination" class="form-control m-select2 m_select2_1 m-put ">
                            <option></option>
                            <%= for stations <- @stations do %>
                            <option value="<%= stations.id %>"><%= stations.description %></option>
                            <% end %>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4 form-group">
                    <div class="form-group">
                        <label for="example-input-small" class="form-label">Station Code<span style="color: red;"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input required type="text" id="station_code" name="station_code" value ="<%= @batch_items && @batch_items.station_code %>" class="form-control m-input ">
                            <span class="m-input-icon__icon m-input-icon__icon--right"><span><i class="la la-bookmark"></i></span></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 form-group">
                    <div class="form-group">
                        <label for="example-input-small" class="form-label">Tariff Destination<span style="color: red;"></label>
                         <select required name="tariff_destination_id" tariff_destination_data ="<%= @batch_items && @batch_items.tariff_destination_id %>" id="destin_tariff" class="form-control m-select2 m_select2_1 station_select m-put tariff-lookup-edit" >
                            <option></option>
                            <%= for stations <- @stations do %>
                            <option value="<%= stations.id %>"><%= stations.description %></option>
                            <% end %>
                        </select>
                    </div>
                </div>
                <div class="col-sm-4 form-group">
                    <div class="form-group">
                        <label for="example-input-small" class="form-label">Customer Reference No.<span style="color: red;"></label>
                        <input required type="text" id="customer_ref"  value ="<%= @batch_items && @batch_items.customer_ref %>" name="customer_ref" class="form-control m-input ">
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">

                <h4 class="m-portlet__head-text">
                    Consignment Summary
                </h4>
            </div>
        </div>
    </div>
    <form class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed">
        <div class="m-portlet__body">
            <div class="form-group m-form__group row">
                <div class="col-lg-4">
                    <label for="example-input-small" class="form-label">Total Wagon Count<span style="color: red;"></label>
                    <input type="text" class="form-control m-input  disable-fields" name="" id="wagon_count">
                </div>
                <div class="col-lg-4">
                    <label for="example-input-small" class="form-label">Total Tonnage<span style="color: red;"></label>
                    <input type="text" id= "total_tonnage" class="form-control m-input disable-fields" >
                </div>
                <div class="col-lg-4">
                    <label for="example-input-small" class="form-label">Surcharge Rate<span style="color: red;"></label>
                    <input type="text" id="surcharge-percent" value ="<%= @batch_items && (Decimal.div(@batch_items.surcharge, 100) |> to_string) %>" class="form-control m-input disable-fields">
                </div>
            </div>
            <div class="form-group m-form__group row">
                <div class="col-lg-4">
                    <label for="example-input-small" class="form-label">VAT Percentage<span style="color: red;"></label>
                     <input type="text" id="vat-percentage" value = "<%= @rate && (Decimal.div(@rate.vat, 100) |> to_string) %>" class="form-control m-input disable-fields">
                </div>
                <div class="col-lg-4">
                    <label for="example-input-small" class="form-label">Total VAT<span style="color: red;"></label>
                    <input type="text" id="vat_total" class="form-control m-input disable-fields ">
                </div>

                <div class="col-lg-4">
                    <label class="">Apply VAT</label>
                    <div class="m-radio-inline">
                        <label class="m-radio m-radio--solid vat apply_vat_edit">
                            <input type="radio"  id="no_vet" name="vat_applied" value="NO"> NO
                             <input type="hidden" id="edit-vat" value="<%= @batch_items && @batch_items.vat_applied %>">
                            <span></span>
                        </label>
                        <label class="m-radio m-radio--solid vat apply_vat_edit">
                            <input type="radio"  id="vet" name="vat_applied"  value="YES"> YES
